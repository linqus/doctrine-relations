{% extends 'base.html.twig' %}

{% block title %}Popular answers{% endblock %}

{% block body %}

<div class="container my-md-4">
    <div class="d-flex justify-content-between">
        <h1>Popular answers:</h2>
    

        <form action="{{ path('app_popular_answers') }}">
            <input 
                type="search" 
                name="q"
                class="form-control"
                placeholder="Search..."
                aria-label="Search"
            >
        </form>
    </div>

    <ul class="list-unstyled">
        {% for answer in answers %}   
            {{ include('_anwers.html.twig', {
                showQuestion: true
            }) }}
        {% endfor %}
    </ul>
</div>




{% endblock %}